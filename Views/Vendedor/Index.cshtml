@model IEnumerable<ProjetoMercado.Models.Vendedor>

@{
    ViewData["Title"] = "Index";
}

<h1>Vendedor</h1>

<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeVendedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroDoCaixa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeVendedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroDoCaixa)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VendedorId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.VendedorId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.VendedorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
