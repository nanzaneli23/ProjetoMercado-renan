@model ProjetoMercado.Models.Venda

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Venda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ValorTotal" class="control-label"></label>
                <input asp-for="ValorTotal" class="form-control" />
                <span asp-validation-for="ValorTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataVenda" class="control-label"></label>
                <input asp-for="DataVenda" class="form-control" />
                <span asp-validation-for="DataVenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_Cliente" class="control-label"></label>
                <input asp-for="Id_Cliente" class="form-control" />
                <span asp-validation-for="Id_Cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_Vendedor" class="control-label"></label>
                <input asp-for="Id_Vendedor" class="form-control" />
                <span asp-validation-for="Id_Vendedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_Pagamento" class="control-label"></label>
                <input asp-for="Id_Pagamento" class="form-control" />
                <span asp-validation-for="Id_Pagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volte pra lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
