    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>


<div>
    <h4>Vendas Has Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Venda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Venda.ValorTotal)
        </dd>
        <dt class = "col-sm-2">
